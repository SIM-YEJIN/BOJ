#define _CRT_SECURE_NO_WARNINGS
#include <iostream>
#include <cstdio>

int main6() {
	int num;
	scanf("%d", &num);

	for (int i = 0; i < num; i++) {
		for (int k = 0; k < i; k++) {
			printf(" ");
		}
		for (int j = num; j > i; j--) {
			printf("*");
		}
		for (int l = num - 1; l > i; l--) {
			printf("*");
		}
		printf("\n");
	}
	return 0;
}
