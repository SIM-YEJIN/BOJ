#define _CRT_SECURE_NO_WARNINGS
#include <iostream>
#include <cstdio>
using namespace std;

void stars(int num) {
	for (int i = 0; i < num-1; i++) {
		for (int j = 0; j < num-1- i; j++) {
			printf(" ");
		}printf("*");
		for (int k = 0; k < 2 * i -1; k++) {
			printf(" ");
		}if (i != 0) printf("*\n"); else printf("\n");
	}
	for (int i = 0; i < 2*num-1; i++) {
		printf("*");
	}
}
int main10992() {
	int num;
	scanf("%d", &num);
	stars(num);
	return 0;
}
