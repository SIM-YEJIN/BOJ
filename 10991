#define _CRT_SECURE_NO_WARNINGS
#include <iostream>
#include <cstdio>
using namespace std;

void star(int num) {
	for (int i = 0; i < num; i++) {
		for (int j = 1; j < num - i; j++) {
			printf(" ");
		}
		for (int k = 1; k <= 2*i+1; k++) {
			if (k % 2 == 1) printf("*");
			else if (k % 2 == 0)printf(" ");
		}printf("\n");
	}
}
int main10991() {
	int num;
	scanf("%d", &num);
	star(num);
	return 0;
}
